{
	"info": {
		"name": "Order Service API Collection",
		"description": "Collection for testing Order Service endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Checkout Order",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"userId\": 1,\n  \"totalAmount\": 99.99,\n  \"paymentMethod\": \"CREDIT_CARD\",\n  \"orderItems\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 2,\n      \"price\": 49.99\n    }\n  ]\n}"
				},
				"url": {
					"raw": "{{base_url}}/orders/checkout",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"orders",
						"checkout"
					]
				},
				"description": "Create a new order and process payment"
			},
			"response": []
		},
		{
			"name": "Get Order by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/orders/{{order_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"orders",
						"{{order_id}}"
					]
				},
				"description": "Get order details by order ID"
			},
			"response": []
		},
		{
			"name": "Get Orders by User ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/orders/user/{{user_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"orders",
						"user",
						"{{user_id}}"
					]
				},
				"description": "Get all orders for a specific user"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8083",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "your_jwt_token_here",
			"type": "string"
		},
		{
			"key": "order_id",
			"value": "1",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "1",
			"type": "string"
		}
	]
}
